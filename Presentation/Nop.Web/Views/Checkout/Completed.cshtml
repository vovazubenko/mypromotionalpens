@model CheckoutCompletedModel
@using Nop.Web.Models.Checkout;
@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.Checkout").Text);
    //page class
    Html.AppendPageCssClassParts("html-checkout-page");
    Html.AppendPageCssClassParts("html-order-completed-page");
}

<!-- Event snippet for Purchase conversion page -->
<script>gtag('event', 'conversion', { 'send_to': 'AW-1025360246/RRtVCOnh3ckBEPaC9-gD', 'value':@Model.OrderTotal, 'currency': 'USD', 'transaction_id': '@Model.OrderId' });</script>

<style>
    .topic-block-title {
        display: none !important;
    }

    .ulCheckoutComplete {
        list-style: disc !important;
        padding-left: 7% !important;
        padding-top: 10px !important;
    }
</style>
<div class="page checkout-page order-completed-page">
    @if (!Model.OnePageCheckoutEnabled)
    {
        @Html.Action("CheckoutProgress", "Checkout", new { step = CheckoutProgressStep.Complete })
    }
    <div class="page-title">
        <h1>@T("Checkout.ThankYou")</h1>
    </div>
    <div class="page-body checkout-data">
        @Html.Widget("checkout_completed_top", Model.OrderId)
        <div class="section order-completed">
            <div class="title">
                <strong>@T("Checkout.YourOrderHasBeenSuccessfullyProcessed")</strong>
            </div>
            <div class="details">
                @Html.Raw(Html.Action("TopicBlock", "Topic", new { systemName = "OrderFinishPage" }).ToString().Replace("{##ORDERID##}", Model.CustomOrderNumber))
                @*@T(Server.HtmlDecode(Html.Action("TopicBlock", "Topic", new { systemName = "OrderFinishPage" }).ToString().Replace("{##ORDERID##}",Model.CustomOrderNumber)))*@

                @*<div class="order-number">
                        <strong>@T("Checkout.OrderNumber"): @Model.CustomOrderNumber</strong>
                    </div>
                    <div class="details-link">
                        <a href="@Url.RouteUrl("OrderDetails", new { orderID = Model.OrderId })">@T("Checkout.PlacedOrderDetails")</a>
                    </div>*@
            </div>
            <div class="buttons">
                <input type="button" value="@T("Checkout.ThankYou.Continue")" class="button-1 order-completed-continue-button" onclick="setLocation('@Url.RouteUrl("HomePage")')" />
            </div>
        </div>
        @Html.Widget("checkout_completed_bottom", Model.OrderId)
    </div>
</div>
