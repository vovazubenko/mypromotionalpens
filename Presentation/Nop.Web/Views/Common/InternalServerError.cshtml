@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.InternalServerError").Text);
    //page class
    Html.AppendPageCssClassParts("html-not-found-page");
}

<link href="~/Styles/ErrorPageStyles.css" rel="stylesheet" />

<div class="page not-found-page">
    <div class="page-body">
        @Html.Action("TopicBlock", "Topic", new { systemName = "InternalServerError" })
    </div>
</div>

<script>
    function deleteExtraBlocks()
    {
        var divAttr = $(".two-columns-area.slider-right-column");
        if (divAttr.length > 0) {
            $(divAttr).remove();
        }
    };

    $(document).ready(function () {
        deleteExtraBlocks();
    });

    document.onreadystatechange = function () {
        deleteExtraBlocks();
    };

    window.onload = function () {
        deleteExtraBlocks();
    };
</script>