@model IList<CategoryModel>

@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="topic-block-title"> 
        <h2>@T("homepage.featuredcategories")</h2>
    </div>
    <div class="category-grid home-page-category-grid">
        <div class="item-grid">
            @foreach (var item in Model)
            {
                <div class="item-box">
                    <div class="category-item">

                        <div class="picture">
                            <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                <img alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
                            </a>
                        </div>
                        <div class="details">
                            <div class="title Featured-Product-Categories-title">
                                <h3>
                                    <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                        @item.Name
                                    </a>
                                </h3>
                            </div>
                            <div class="category-description Featured-Product-Categories-details">
                                @Html.Raw(item.Description)
                            </div>
                            <div class="Featured-Product-Categories-button">
                                <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })">Shop @item.Name</a>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
}