@using SevenSpikes.Nop.Plugins.RichBlog.Models

@model  IList<RichBlogCategoryModel>

@{
    var supportRtl = this.ShouldUseRtlTheme();
    var theme = (string)ViewBag.Theme;

    Html.AddCssFileParts("~/Plugins/SevenSpikes.Nop.Plugins.RichBlog/Themes/" + theme + "/Content/RichBlog.css");
    if (supportRtl)
    {
        Html.AddCssFileParts("~/Plugins/SevenSpikes.Nop.Plugins.RichBlog/Themes/" + theme + "/Content/RichBlog.rtl.css");
    }
}

@{
    if (Model.Count == 0)
    {
        return;
    }
}

<div class="block">
    <div class="title">
        <strong>@T("SevenSpikes.RichBlog.Public.Category.Tab.Title")</strong>
    </div>
    <div class="listbox">
        <ul class="list">
            @foreach (var category in Model)
            {
                <li class="category">
                    <a href="@Url.RouteUrl("BlogByCategory", new {SeName = category.SEName })">@category.Name (@category.NumberOfBlogPosts)</a>
                </li>
            }
        </ul>
    </div>
</div>